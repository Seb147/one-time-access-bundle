<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="berny.ota.provider.class">Berny\OneTimeAccessBundle\Security\Authentication\Provider\Provider</parameter>
        <parameter key="berny.ota.firewall.class">Berny\OneTimeAccessBundle\Security\Http\Firewall\Firewall</parameter>
    </parameters>

    <services>
        <service id="berny.ota.provider" class="%berny.ota.provider.class%" abstract="true">
            <argument /> <!-- Firewall name -->
            <argument /> <!-- One-time-access user provider -->
            <argument type="service" id="security.user_checker" />
        </service>

        <service id="berny.ota.firewall" class="%berny.ota.firewall.class%" abstract="true">
            <argument /> <!-- Firewall name -->
            <argument /> <!-- Options -->
            <argument type="service" id="security.context" />
            <argument type="service" id="security.authentication.manager" />
            <argument type="service" id="event_dispatcher" on-invalid="null" />
        </service>
    </services>
</container>
