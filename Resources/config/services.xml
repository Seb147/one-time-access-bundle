<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="bcc.one_time_access.provider.class">BCC\OneTimeAccessBundle\Security\Authentication\Provider\OneTimeAccessProvider</parameter>
        <parameter key="bcc.one_time_access.firewall.class">BCC\OneTimeAccessBundle\Security\Http\Firewall\OneTimeAccessFirewall</parameter>
    </parameters>

    <services>
        <service id="bcc.one_time_access.provider" class="%bcc.one_time_access.provider.class%" abstract="true">
            <argument /> <!-- Firewall name -->
            <argument /> <!-- User provider -->
            <argument type="service" id="security.user_checker" />
        </service>

        <service id="bcc.one_time_access.firewall" class="%bcc.one_time_access.firewall.class%" abstract="true">
            <argument /> <!-- Firewall name -->
            <argument /> <!-- Options -->
            <argument type="service" id="security.context" />
            <argument type="service" id="security.authentication.manager" />
            <argument type="service" id="event_dispatcher" on-invalid="null" />
        </service>
    </services>
</container>
